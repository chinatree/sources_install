<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///usr/local/services/hadoop/dfs/name</value>
    </property>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///usr/local/services/hadoop/dfs/data</value>
    </property>
    <property>
        <name>dfs.replication</name>
        <value>3</value>
    </property>
    <property>
        <name>dfs.nameservices</name>
        <value>tspcluster</value>
    </property>
    <property>
        <name>dfs.ha.namenodes.tspcluster</name>
        <value>node1,node2</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.tspcluster.node1</name>
        <value>10.10.8.92:9000</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.tspcluster.node2</name>
        <value>10.10.8.93:9000</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.tspcluster.node1</name>
        <value>10.10.8.92:59000</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.tspcluster.node2</name>
        <value>10.10.8.93:59000</value>
    </property>
    <property>
        <name>dfs.namenode.shared.edits.dir</name>
        <value>qjournal://10.10.8.92:8485;10.10.8.93:8485;10.10.8.94:8485/tspcluster</value>
    </property>
    <property>
        <name>dfs.client.failover.proxy.provider.tspcluster</name>
        <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
    </property>
    <property> 
        <name>dfs.journalnode.edits.dir</name> 
        <value>/usr/local/services/hadoop/tmp/journal</value> 
    </property>
    <property>
        <name>dfs.ha.fencing.methods</name>
        <value>sshfence</value>
    </property>
    <property>
        <name>dfs.ha.fencing.ssh.private-key-files</name>
        <value>/home/hadoop/.ssh/id_rsa</value>
    </property>
    <property>
        <name>dfs.ha.automatic-failover.enabled.tspcluster</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value>
    </property>
    <property>
        <name>dfs.datanode.address</name>
        <value>0.0.0.0:9001</value>
    </property>
    <property>
        <name>dfs.datanode.ipc.address</name>
        <value>0.0.0.0:9011</value>
    </property>
    <property>
        <name>dfs.datanode.http.address</name>
        <value>0.0.0.0:59001</value>
    </property>
    <property>
        <name>dfs.journalnode.rpc-address</name>
        <value>0.0.0.0:8485</value>
    </property>
    <property>
        <name>dfs.journalnode.http-address</name>
        <value>0.0.0.0:58485</value>
    </property>
    <property>
        <name>dfs.ha.zkfc.port</name>
        <value>8019</value>
    </property>
    <property>
        <name>dfs.hosts</name>
        <value>/usr/local/services/hadoop/etc/hadoop/datanode-allow-list</value>
    </property>
    <property>
        <name>dfs.hosts.exclude</name>
        <value>/usr/local/services/hadoop/etc/hadoop/datanode-deny-list</value>
    </property>
    <property>
        <name>dfs.support.append</name>
        <value>true</value>
    </property>
    <property>
        <name>dfs.client.block.write.replace-datanode-on-failure.policy</name>
        <value>NEVER</value>
    </property>
</configuration>
